{
  "name": "how-far-along",
  "version": "0.0.0-semantically-released",
  "description": "Template website with Next.js & Chakra UI",
  "main": "dist/index.js",
  "license": "MIT",
  "private": true,
  "author": {
    "name": "Fran√ßois Best",
    "email": "contact@francoisbest.com",
    "url": "https://francoisbest.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/franky47/how-far-along"
  },
  "keywords": [
    "webapp",
    "nextjs",
    "pregnancy",
    "due-date",
    "baby"
  ],
  "scripts": {
    "dev": "next",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "build:next": "next build",
    "build:export": "next export",
    "build": "run-s build:next build:export",
    "analyze": "ANALYZE=true next build",
    "ci": "run-s build"
  },
  "dependencies": {
    "@47ng/chakra-next": "^2.4.2",
    "@chakra-ui/core": "^0.8.0",
    "@emotion/core": "^10.0.35",
    "@emotion/styled": "^10.0.27",
    "@sentry/browser": "^5.25.0",
    "@sentry/integrations": "^5.24.2",
    "dayjs": "^1.9.1",
    "emotion-theming": "^10.0.27",
    "next": "^9.5.4",
    "next-seo": "^4.11.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^3.11.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@mdx-js/loader": "^1.6.18",
    "@next/bundle-analyzer": "^9.5.4",
    "@next/mdx": "^9.5.4",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.8",
    "@zeit/next-source-maps": "^0.0.3",
    "commitlint": "^11.0.0",
    "dotenv": "^8.2.0",
    "husky": "^4.3.0",
    "jest": "^26.5.2",
    "next-compose-plugins": "^2.2.0",
    "next-transpile-modules": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "node"
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "clean",
          "doc",
          "feat",
          "fix",
          "perf",
          "ref",
          "revert",
          "style",
          "test"
        ]
      ],
      "subject-case": [
        0,
        "always",
        "sentence-case"
      ],
      "body-leading-blank": [
        2,
        "always",
        true
      ]
    }
  }
}
